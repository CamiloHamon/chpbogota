<link rel="stylesheet" href="/css/news-detail.css">
<link rel="stylesheet" href="/css/sharedButtons.css">

<article class="news-article">
    <header class="news-header">
        <h1 class="">{{title}}</h1> <!-- Título de la noticia -->
        <h2 class="news-subtitle">{{subtitle}}</h2> <!-- Subtítulo de la noticia -->
        <div class="news-meta">
            <span class="author">Por <b>{{author}}</b></span> | <!-- Autor de la noticia -->
            <span class="date">Publicado el {{date}}</span> <!-- Fecha de publicación -->
        </div>
    </header>
    <hr>
    <section class="news-content">
        {{{content}}} <!-- Contenido de la noticia. Usa triple llaves para HTML sin escapar en Handlebars -->
    </section>
    <hr>
    <!-- Sección de Compartir en Redes Sociales -->
    <div class="share-buttons">
        <span>Compartir en:</span>
        <div class="share-buttons-content">
            <a href="{{facebookShareURL}}" class="share-btn facebook" target="_blank" title="Compartir en Facebook">
               <img src="data:image/png;base64,">
            </a>
            <a href="{{twitterShareURL}}" class="share-btn twitter" target="_blank" title="Compartir en X">
                <img class="icon" src="data:image/png;base64,">
            </a>
            <a href="{{whatsappShareURL}}" class="share-btn whatsapp" target="_blank" title="Compartir en WhatsApp">
               <img class="icon" src="data:image/png;base64,">
            </a>
        </div>
    </div>
</article>